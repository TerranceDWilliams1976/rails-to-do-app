
<table class="table table-bordered">
  <tbody>
    <% @lists.each do |list| %>
      <% if list.completed %>
      
        <tr class= 'table-primary'>
          <td class="striker"><%= link_to list.description, edit_list_path(list) %><% list.description %></td>
          <td>
            <% link_to 'Edit', edit_list_path(list) %> 
           <center><%= link_to 'Delete', list, method: :delete, data: { confirm: 'Are you sure?' } %></center>
          </td>
        </tr>
      <% else %>
        <tr>
          <td><%= link_to list.description, edit_list_path(list) %><% list.description %></td>
          <td>
            <% link_to 'Edit', edit_list_path(list) %> 
           <center><%= link_to 'Delete', list, method: :delete, data: { confirm: 'Are you sure?' } %></center>
          </td>
        </tr>
      <% end %>
      
    <% end %>
  </tbody>
</table>

<br>

